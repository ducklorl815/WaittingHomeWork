@using WaittingHomeWork.ViewModel;
@model EnglishWordViewModel_result

<table class="footable table table-stripped toggle-arrow-tiny">
    <thead>
        <tr style="white-space:nowrap;background-color:	#F0F0F0;">
            <th class="col-1">中文名稱</th>
            <th class="col-1">英文名稱</th>
            <th class="col-1">解釋</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.WordTableList)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Word)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Explain)
                </td>
            </tr>
        }
    </tbody>
</table>